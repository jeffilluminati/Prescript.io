<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import java.awt.Font?>
<?import java.awt.Insets?>
<?import java.awt.TextField?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.DoctorController">
    <left>
        <Accordion fx:id="leftAccordion" prefHeight="305.0" prefWidth="119.0" BorderPane.alignment="CENTER" />
    </left>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Patient Details">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
                <HBox prefHeight="24.0" prefWidth="481.0">
                    <children>
                        <Label text="Name: " />
                        <Label fx:id="patientNameLabel" />
                        <TextField fx:id="patientNameTF" visible="false" />
                    </children>
                </HBox>
                <HBox prefHeight="28.0" prefWidth="481.0">
                    <children>
                        <Label text="NRIC: " />
                        <Label fx:id="ICLabel" />
                        <TextField fx:id="ICTF" visible="false" />
                    </children>
                </HBox>
                <HBox prefHeight="28.0" prefWidth="481.0">
                    <children>
                        <Label text="Address:" />
                        <Label fx:id="addressLabel" />
                        <TextField fx:id="addressTF" visible="false" />
                    </children>
                </HBox>
                <Label text="Prescription Details">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
                <HBox prefHeight="24.0" prefWidth="481.0">
                    <children>
                        <Label text="Name:" />
                        <Label fx:id="prescriptionNameLabel" />
                        <TextField fx:id="prescriptionNameTF" visible="false" />
                    </children>
                </HBox>
                <HBox prefHeight="24.0" prefWidth="481.0">
                    <children>
                        <Label text="Description:" />
                        <Label fx:id="prescriptionDescriptionLabel" />
                        <TextField fx:id="prescriptionDescriptionTF" visible="false" />
                    </children>
                </HBox>
                <Label fx:id="errorLabel" text="Please Select a Patient using the menu on the left" textFill="RED" />
            </children>
        </VBox>
    </center>
    <top>
        <Label text="Doctor" BorderPane.alignment="CENTER">
            <font>
                <Font size="33.0" />
            </font>
        </Label>
    </top>
    <bottom>
        <ButtonBar prefHeight="78.0" prefWidth="580.0">
            <buttons>
                <Button fx:id="addPatientBtn" maxWidth="80.0" mnemonicParsing="false" onAction="#onAddPatientBtn" text="Add Patient">
                    <font>
                        <Font size="10.0" />
                    </font></Button>
                <Button fx:id="editPatientBtn" maxWidth="80.0" mnemonicParsing="false" onAction="#onEditPatientBtn" text="Edit Patient">
                    <font>
                        <Font size="10.0" />
                    </font></Button>
                <Button fx:id="deletePatientBtn" mnemonicParsing="false" onAction="#onDeletePatientBtn" prefHeight="25.0" text="Delete Patient">
                    <font>
                        <Font size="10.0" />
                    </font></Button>
                <Button fx:id="editPrescriptionButton" mnemonicParsing="false" onAction="#onEditPrescriptionBtn" text="Edit Prescription">
                    <font>
                        <Font size="10.0" />
                    </font></Button>
                <Button mnemonicParsing="false" prefHeight="23.0" prefWidth="204.0" text="Send Prescription">
                    <font>
                        <Font size="10.0" />
                    </font>
                </Button>
                <Button fx:id="saveBtn" maxWidth="50.0" minWidth="50.0" mnemonicParsing="false" onAction="#onSaveBtn" prefHeight="25.0" text="Save">
                    <font>
                        <Font size="10.0" />
                    </font></Button>
            </buttons>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </BorderPane.margin>
        </ButtonBar>
    </bottom>
</BorderPane>